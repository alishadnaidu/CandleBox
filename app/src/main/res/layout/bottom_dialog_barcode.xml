<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/allAboutYourCandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/avenir"
        android:text="@string/allAboutYourCandle"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/candleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allAboutYourCandle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/avenir"
        android:text="@string/unknownCandle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="The Lovers Candle" />

    <TextView
        android:id="@+id/ingredientsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCandle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        tools:text="List of ingredients, etc etc." />

    <TextView
        android:id="@+id/sustainabilityMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientsList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="158dp"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        tools:text="Great job picking out this candle! It has no toxic ingredients and is safe for the environment!" />

    <ImageView
        android:id="@+id/ivCandle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/candleName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/candle_logo"
        tools:layout_centerHorizontal="true" />
</RelativeLayout>